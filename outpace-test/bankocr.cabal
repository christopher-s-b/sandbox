name:                bankocr
version:             0.1.0.0
synopsis:            Outpace coding challenge thing
description:         Parse some weird data and do operations on it
license:             BSD3
license-file:        LICENSE
author:              Dustin Getz
maintainer:          dustin.getz@gmail.com
category:            Data
build-type:          Simple
cabal-version:       >=1.10

executable BankOcrMain
  ghc-options:       -rtsopts -O2
  main-is:           Main.hs
  hs-source-dirs:    src
  build-depends:       base >=4.7 && <5,
                       bankocr,
                       split,
                       optparse-applicative
  default-language:    Haskell2010

test-suite tests
  ghc-options:         -Wall
  type:                exitcode-stdio-1.0
  main-is:             Tests.hs
  hs-source-dirs:      tests
  build-depends:       base,
                       bankocr,
                       hspec >= 2.0 && < 2.1
  default-language:    Haskell2010

library
  ghc-options:         -Wall
  exposed-modules:     BankOcr
  build-depends:       base >= 4.7 && <5, 
                       split
  hs-source-dirs:      src
  default-language:    Haskell2010
